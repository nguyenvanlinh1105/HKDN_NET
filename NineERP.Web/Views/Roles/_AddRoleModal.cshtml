@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="modal fade" id="modalAddRole" tabindex="-1" role="dialog" aria-labelledby="modalAddRoleLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="form-add-role">
                <div class="modal-header">
                    <h5 class="modal-title">@Localizer["Add New Role"]</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>@Localizer["Role Name"]</label>
                        <input type="text" class="form-control" name="Name" placeholder="@Localizer["Enter Role Name"]" required />
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Description"]</label>
                        <textarea class="form-control" name="Description" placeholder="@Localizer["Enter Description"]"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
