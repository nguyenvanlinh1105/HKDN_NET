@using NineERP.Application.Constants.Role
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EmployeeManagement"];
    var breadcrumb = new List<(string Text, string Url)>
    {
        (Localizer["Dashboard"].Value, "/dashboard"),
        (Localizer["EmployeeManagement"].Value, null!)
    };
}

@section Styles {
    <link rel="stylesheet" href="~/assets/libs/select2/select2.min.css" />
    <link rel="stylesheet" href="~/assets/libs/flatpickr/flatpickr.min.css" />
    <link rel="stylesheet" href="~/admin-app/controllers/employee/index.css" />
}

@section Scripts {
    <script src="~/assets/libs/mustache/mustache.min.js" asp-append-version="true"></script>
    <script src="~/assets/libs/select2/select2.min.js" asp-append-version="true"></script>
    <script src="~/assets/libs/flatpickr/flatpickr.js" asp-append-version="true"></script>
    <script src="~/assets/libs/moment/moment.min.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/employee/index.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/employee/add.js" asp-append-version="true"></script>
    <script>
        var employeeIndex = new EmployeeIndex();
        var employeeAdd = new EmployeeAdd();
        $(function () {
            employeeIndex.initialize();
            employeeAdd.initialize();
        });
    </script>
    <script>
        window.localization = {
            NoEmployeeSelected: '@Localizer["NoEmployeeSelected"]',
            ConfirmDeleteTitle: '@Localizer["ConfirmDeleteTitle"]',
            ConfirmDeleteText: '@Localizer["ConfirmDeleteText"]',
            Yes: '@Localizer["Yes"]',
            No: '@Localizer["No"]',
            DeleteFailed: '@Localizer["DeleteFailed"]',
            Edit: '@Localizer["Edit"]',
            Delete: '@Localizer["Delete"]',
            NoRecordsFound: '@Localizer["NoRecordsFound"]',
            LoadStatisticsFailed: '@Localizer["LoadStatisticsFailed"]',
            Check: '@Localizer["Check"]',
            InvalidFourDigits: '@Localizer["InvalidFourDigits"]',
            NumberExists: '@Localizer["NumberExists"]',
            Valid: '@Localizer["Valid"]',
            SomethingWentWrong: '@Localizer["SomethingWentWrong"]',
            FullNameRequired: '@Localizer["FullNameRequired"]',
            EmailRequired: '@Localizer["EmailRequired"]',
            PhoneInvalid: '@Localizer["PhoneInvalid"]',
            ContractToInvalid: '@Localizer["ContractToInvalid"]',
            CheckEmployeeNoFailed: '@Localizer["CheckEmployeeNoFailed"]',
            CheckEmployeeNoRequestFailed: '@Localizer["CheckEmployeeNoRequestFailed"]',
            CheckContractNoFailed: '@Localizer["CheckContractNoFailed"]',
            CheckContractNoRequestFailed: '@Localizer["CheckContractNoRequestFailed"]',
            SelectOption: '@Localizer["SelectOption"]',
        };
    </script>
}

<div class="row mb-3">
    <div class="col">
        <h4 class="page-title">@ViewData["Title"]</h4>
        @await Html.PartialAsync("_BreadcrumbPartial", breadcrumb)
    </div>
</div>

<div class="row summary-row mb-2">
    <div class="col-md-3 col-6 mb-2">
        <div class="card-summary">
            <h3 id="total-employees">0</h3>
            <div>@Localizer["Total Employees"]</div>
        </div>
    </div>
    <div class="col-md-3 col-6 mb-2">
        <div class="card-summary">
            <h3 id="official-employees">0</h3>
            <div>@Localizer["Official Employees"]</div>
        </div>
    </div>
    <div class="col-md-3 col-6 mb-2">
        <div class="card-summary">
            <h3 id="probation-employees">0</h3>
            <div>@Localizer["Probation Employees"]</div>
        </div>
    </div>
    <div class="col-md-3 col-6 mb-2">
        <div class="card-summary">
            <h3 id="intern-employees">0</h3>
            <div>@Localizer["Interns"]</div>
        </div>
    </div>
</div>

<div class="row align-items-center mb-3">
    <div class="col-12 col-md-8 mb-2 mb-md-0">
        <div class="input-group">
            <input type="text" id="txtKeyword" class="form-control" placeholder="@Localizer["Search name..."]" />
            <div class="input-group-append">
                <button id="btn-search" class="btn btn-primary">
                    <i class="mdi mdi-magnify"></i> @Localizer["Search"]
                </button>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 text-md-right mt-2 mt-md-0">
        <div class="btn-group btn-group-sm d-flex d-md-inline-flex flex-wrap justify-content-between gap-2" role="group">
            <button class="btn btn-outline-success mr-1" data-toggle="tooltip" title="@Localizer["ExportToExcel"]">
                <i class="mdi mdi-file-excel"></i>
            </button>
            <button class="btn btn-outline-info mr-1" data-toggle="tooltip" title="@Localizer["ImportFromExcel"]">
                <i class="mdi mdi-cloud-upload"></i>
            </button>
            <button class="btn btn-outline-danger mr-1" id="btn-delete-multiple" data-toggle="tooltip" title="@Localizer["DeleteSelected"]">
                <i class="mdi mdi-delete"></i>
            </button>
            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modalAddEmployee" data-backdrop="static" data-keyboard="false" title="@Localizer["AddNewEmployee"]">
                <i class="mdi mdi-plus"></i>
            </button>
        </div>
    </div>
</div>

<!-- Desktop Table View -->
<div id="tbl-view" class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th style="width: 40px;"><input type="checkbox" id="check-all" /></th>
                        <th>@Localizer["Employee No"]</th>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Position"]</th>
                        <th>@Localizer["Department"]</th>
                        <th>@Localizer["Contract Type"]</th>
                        <th>@Localizer["Status"]</th>
                        <th class="text-center">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody id="tbl-content"></tbody>
            </table>
        </div>
        <partial name="_PaginationPartial" />
    </div>
</div>

<!-- Mobile Card View -->
<div id="card-view" class="row"></div>
<!-- Load More Button (Mobile only) -->
<div id="load-more-wrapper" class="text-center my-3" style="display: none;">
    <button id="btn-load-more" class="btn btn-outline-primary">
        @Localizer["LoadMore"]
    </button>
</div>


<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td><input type="checkbox" class="check-row" value="{{Id}}" /></td>
        <td>{{EmployeeNo}}</td>
        <td>
            <a href="/employees/detail/{{Id}}" class="d-flex align-items-center text-decoration-none text-reset">
                <img src="{{AvatarUrl}}" class="employee-avatar" onerror="this.src='/assets/images/users/no-avatar.png'" />
                <span class="ml-2 text-primary">{{FullName}}</span>
            </a>
        </td>
        <td>{{PositionName}}</td>
        <td>{{DepartmentName}}</td>
        <td>{{ContractTypeName}}</td>
        <td>
            <span class="status-badge {{StatusClass}}">{{StatusText}}</span>
        </td>
        <td class="text-center">{{{ActionDropdown}}}</td>
    </tr>
</script>

<script id="card-template" type="x-tmpl-mustache">
    <div class="col-12 mb-3">
        <div class="card p-3 shadow-sm border rounded-lg bg-light">
            <div class="d-flex align-items-center mb-3">
                <input type="checkbox" class="check-row mr-2" value="{{Id}}" />
                <img src="{{AvatarUrl}}" class="employee-avatar mr-3" />
                <div>
                    <div class="font-weight-bold text-dark">{{FullName}}</div>
                    <div class="text-muted small">{{EmployeeNo}}</div>
                </div>
            </div>
            <div class="mb-2 px-2">
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Position:</span> <strong>{{PositionName}}</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Department:</span> <strong>{{DepartmentName}}</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Contract:</span> <strong>{{ContractTypeName}}</strong>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-2">
                    <span class="text-muted">Status:</span>
                    <span class="status-badge {{StatusClass}}">{{StatusText}}</span>
                </div>
            </div>
            <div class="text-right mt-3">
                <a href="/employees/edit/{{Id}}" class="btn btn-sm btn-outline-primary mr-1">
                    <i class="mdi mdi-pencil"></i>
                </a>
                <button class="btn btn-sm btn-outline-danger btn-delete" data-id="{{Id}}">
                    <i class="mdi mdi-delete"></i>
                </button>
            </div>
        </div>
    </div>
</script>

@await Html.PartialAsync("_AddEmployeeModal")
