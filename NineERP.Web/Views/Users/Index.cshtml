@using NineERP.Application.Constants.Role
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["User Management"];
    var breadcrumb = new List<(string Text, string Url)>
    {
        (Localizer["Dashboard"].Value, "/dashboard"),
        (Localizer["UserManagement"].Value, null!)
    };
}

@section Scripts {
    <script src="~/assets/libs/mustache/mustache.min.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/user/index.js" asp-append-version="true"></script>
    <script>
        var userObj = new UserController();
        userObj.initialize();
    </script>
    <script>
        window.localization = {
            ConfirmDeleteTitle: '@Localizer["ConfirmDeleteTitle"]',
            ConfirmDeleteText: '@Localizer["ConfirmDeleteText"]',
            ConfirmChangeStatusTitle: '@Localizer["ConfirmChangeStatusTitle"]',
            ConfirmChangeStatusText: '@Localizer["ConfirmChangeStatusText"]',
            Yes: '@Localizer["Yes"]',
            No: '@Localizer["No"]',
            EmailConfirmed: '@Localizer["Confirmed"]',
            EmailUnconfirmed: '@Localizer["Unconfirmed"]',
            Active: '@Localizer["Active"]',
            Block: '@Localizer["Block"]',
            Trial: '@Localizer["Trial"]',
            Regular: '@Localizer["Regular"]',
            Vip: '@Localizer["Vip"]',
            Business: '@Localizer["Business"]'
        };
    </script>
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex justify-content-between align-items-center">
            <div>
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
            <div>
                @await Html.PartialAsync("_BreadcrumbPartial", breadcrumb)
            </div>
        </div>
    </div>
</div>

<!-- Filter -->
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-8">
                    <form class="form-inline" id="form-filter">
                        <div class="form-group mb-2 mr-2">
                            <label class="sr-only" for="txtKeyword">Search</label>
                            <input type="text" id="txtKeyword" class="form-control" placeholder="@Localizer["Email, UserName, FullName..."]">
                        </div>
                        <div class="form-group mb-2 mr-2">
                            <label class="mr-2" for="ddlRoleName">@Localizer["Role"]</label>
                            <select class="custom-select" id="ddlRoleName">
                                <option value="">@Localizer["Choose Role"]</option>
                                <option value="@RoleConstants.Admin">@RoleConstants.Admin</option>
                                <option value="@RoleConstants.User">@RoleConstants.User</option>
                            </select>
                        </div>
                        <button type="button" id="btn-search" class="btn btn-primary mb-2">
                            <i class="mdi mdi-magnify mr-1"></i> @Localizer["Search"]
                        </button>
                    </form>
                </div>
                <div class="col-lg-4 text-lg-right mt-3 mt-lg-0">
                    <button type="button" class="btn btn-danger waves-effect waves-light float-right mb-3" data-toggle="modal" data-target="#modalAddUser">
                        <i class="mdi mdi-plus-circle mr-1"></i> @Localizer["Add New"]
                    </button>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead>
                    <tr>
                        <th>@Localizer["Number"]</th>
                        <th>@Localizer["Avatar"]</th>
                        <th>@Localizer["Email"]</th>
                        <th>@Localizer["FullName"]</th>
                        <th>@Localizer["Status"]</th>
                        <th>@Localizer["Created Date"]</th>
                        <th class="text-center">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody id="tbl-content"></tbody>
            </table>
        </div>

        <partial name="_PaginationPartial" />
    </div>
</div>

<!-- Mustache Template -->
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{DisplayOrder}}</td>
        <td>{{{AvatarUrl}}}</td>
        <td>{{Email}}</td>
        <td>{{FullName}}</td>
        <td>{{{Status}}}</td>
        <td>{{{CreatedOn}}}</td>
        <td class="text-center">
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-danger btn-delete"><i class="fe-trash-2"></i></a>
        </td>
    </tr>
</script>
@await Html.PartialAsync("_AddUserModal")
