@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var fullName = user?.FindFirst("FullName")?.Value ?? "Admin";
    var avatar = user?.FindFirst("Avatar")?.Value;
    var appDomain = $"{HttpContextAccessor.HttpContext?.Request.Scheme}://{HttpContextAccessor.HttpContext?.Request.Host}";

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture?.Culture?.Name ?? "vi-VN";
    string langFlag = currentCulture == "vi-VN" ? "vietnam" : "us";
    string langName = currentCulture == "vi-VN" ? "Tiếng Việt" : "English";
}

<!-- Topbar Start -->
<div class="navbar-custom">
    <ul class="list-unstyled topnav-menu float-right mb-0">
        <!-- Language Dropdown -->
        <li class="dropdown d-none d-lg-block">
            <a class="nav-link dropdown-toggle mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <img src="~/assets/images/flags/@(langFlag).jpg" alt="flag" class="mr-1" height="12">
                <span class="align-middle">@langName <i class="mdi mdi-chevron-down"></i></span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="/Language/SetLanguage?culture=en-US&returnUrl=@Context.Request.Path" class="dropdown-item notify-item">
                    <img src="~/assets/images/flags/us.jpg" alt="English" class="mr-1" height="12">
                    <span class="align-middle">English</span>
                </a>
                <a href="/Language/SetLanguage?culture=vi-VN&returnUrl=@Context.Request.Path" class="dropdown-item notify-item">
                    <img src="~/assets/images/flags/vietnam.jpg" alt="Tiếng Việt" class="mr-1" height="12">
                    <span class="align-middle">Tiếng Việt</span>
                </a>
            </div>
        </li>

        <!-- User Dropdown -->
        <li class="dropdown notification-list">
            <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                @if (string.IsNullOrEmpty(avatar))
                {
                    <img src="~/assets/images/users/no-avatar.png" alt="user-image" class="rounded-circle">
                }
                else
                {
                    <img src="@($"{appDomain}{avatar}")" alt="user-image" class="rounded-circle" />
                }
                <span class="pro-user-name ml-1">
                    @fullName <i class="mdi mdi-chevron-down"></i>
                </span>
            </a>
            <div class="dropdown-menu dropdown-menu-right profile-dropdown">
                <div class="dropdown-header noti-title">
                    <h6 class="text-overflow m-0">@Localizer["Welcome"]</h6>
                </div>
                <a href="javascript:void(0);" class="dropdown-item notify-item">
                    <i class="remixicon-account-circle-line"></i>
                    <span>@Localizer["MyAccount"]</span>
                </a>
                <a href="javascript:void(0);" class="dropdown-item notify-item">
                    <i class="remixicon-settings-3-line"></i>
                    <span>@Localizer["Settings"]</span>
                </a>
                <div class="dropdown-divider"></div>
                <a href="javascript:void(0);" id="btnLogout" class="dropdown-item notify-item">
                    <i class="remixicon-logout-box-line"></i>
                    <span>@Localizer["Logout"]</span>
                </a>
            </div>
        </li>
    </ul>

    <!-- LOGO -->
    <div class="logo-box">
        <a href="/" class="logo text-center">
            <span class="logo-lg">
                <img src="~/assets/images/logo-light.webp" alt="" height="35">
            </span>
            <span class="logo-sm">
                <img src="~/assets/images/logo-sm.png" alt="" height="40">
            </span>
        </a>
    </div>

    <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
        <li>
            <button class="button-menu-mobile waves-effect waves-light">
                <i class="fe-menu"></i>
            </button>
        </li>
    </ul>
</div>
<!-- end Topbar -->
<script>
    window.localization = {
        LogoutProcessing: '@Localizer["LogoutProcessing"]',
        LogoutSuccess: '@Localizer["LogoutSuccess"]',
        LogoutError: '@Localizer["LogoutError"]',
        ValidatorCustomNumber: '@Localizer["ValidatorCustomNumber"]'
    };
</script>
