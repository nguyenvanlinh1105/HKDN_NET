@using Microsoft.AspNetCore.Identity
@using NineERP.Domain.Entities.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var brand = "<a href=\"https://nineplus.com.vn\" target=\"_blank\"><strong>NinePlus Solution., JSC</strong></a>";
    var footer = string.Format(Localizer["FooterText"].Value, brand);
}
<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="@Localizer["MetaDescription"]" name="description">
    <meta content="Coderthemes" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - NineERP</title>
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
    <!-- Sweet Alert-->
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/libs/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/admin-app/shared/layout.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div id="wrapper">
        @await Html.PartialAsync("_TopBarPartial")
        @await Html.PartialAsync("_LeftSideMenuPartial")

        <div class="content-page" id="page-wrapper">
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.Raw(footer)
                        </div>
                        <div class="col-md-6 text-md-right footer-links d-none d-sm-block">
                            <a href="javascript:void(0);">@Localizer["AboutUs"]</a>
                            <a href="javascript:void(0);">@Localizer["Help"]</a>
                            <a href="javascript:void(0);">@Localizer["ContactUs"]</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/vendor.min.js"></script>
    <!-- Sweet Alerts js -->
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <!-- Sweet alert init js -->
    <script src="~/assets/js/pages/sweet-alerts.init.js"></script>

    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/libs/twbs-pagination/jquery.twbsPagination.min.js"></script>
    <script src="~/assets/libs/toastr/toastr.min.js"></script>

    <!-- App core -->
    <script src="~/admin-app/shared/base.js" asp-append-version="true"></script>
    <script src="~/admin-app/shared/global-ajax.js" asp-append-version="true"></script>
    <script src="~/admin-app/shared/form-helpers.js" asp-append-version="true"></script>

    <!-- ✅ Toastr config -->
    <script>
        toastr.options = {
            closeButton: true,
            debug: false,
            newestOnTop: true,
            progressBar: true,
            positionClass: 'toast-top-right',
            preventDuplicates: false,
            onclick: null,
            showDuration: '300',
            hideDuration: '1000',
            timeOut: '1000',
            extendedTimeOut: '1000',
            showEasing: 'swing',
            hideEasing: 'linear',
            showMethod: 'fadeIn',
            hideMethod: 'fadeOut'
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
